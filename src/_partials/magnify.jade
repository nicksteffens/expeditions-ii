mixin eachBird(obj)
  .col-xs-4(class="bird #{obj.bird}")

    a.icon(class="#{obj.position}", data-toggle='modal', data-target=obj.modal, href=obj.modal)

    .footer.text-center
      h3.common= obj.common
      p.scientific= obj.scientific

#magnify.content.section.hidden(data-section="#magnify").hidden
  .row
    each entry in physical.magnify.info
      +eachBird(entry)

  .instructions.text-center
    h3= physical.magnify.instructions
