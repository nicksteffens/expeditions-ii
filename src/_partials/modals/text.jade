
// Text Modal
.modal.text.fade(id=id tabindex='-1', role='dialog', aria-labelledby='#{id}Label', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header.text-center
        if headline == 'Reclassifying Relationships'
          h2.blue!= headline
        else
          h2!= headline
      .modal-body.text-center
        each paragraph in copy
          p!= paragraph

        if list
          ul
            each item in list
             li.text-left: em!= item

        hr.dashed
        p!= next.copy

        a.btn.router(href=next.link.href, data-dismiss="modal" aria-hidden="true")= next.link.copy

