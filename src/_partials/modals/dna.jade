
// DNA Modal
.modal.dna.fade(id=id tabindex='-1', role='dialog', aria-labelledby='#{id}Label', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header.text-center
        h2= headline
        p= subhead

        .post.hidden
          .correct.hidden
            h2 correct.headline

          .wrong.hidden
            h2 wrong.headline
            p wrong.subhead

        hr.dashed
      .modal-body.text-center
        each answer in answers
          .row.answers.pre
            .col-xs-12
              h2 #{answer.answer}.
                h3.sequenc= answer.sequence
                if answer.isCorrect
                  isCorrect = "correct"
                else
                  isCorrect = "wrong"

                a.radio(class=isCorrect) radio



        .next.post.hidden
          if next.copy
            p= next.copy

          if id == 'listen_quiz'
            a.btn.open-modal(data-dismiss="modal" aria-hidden="true" href=next.link.href)= next.link.copy
          else
            a.btn.router(data-dismiss="modal" aria-hidden="true" href=next.link.href)= next.link.copy





