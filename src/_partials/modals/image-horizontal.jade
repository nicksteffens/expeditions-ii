
// Image Horizontal Modal
.modal.image-horizontal.fade(id=id tabindex='-1', role='dialog', aria-labelledby='#{id}Label', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header.text-center
        button.close.icon.close(type="button" class="close" data-dismiss="modal" aria-hidden="true") &nbsp;
      .modal-body
        .row
          each image in images
            .col-xs-4.text-center.padding-2
              img(src=image alt=id)
